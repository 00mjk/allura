#!$executable
import sys
import json

from pyforge.command import SendMessageCommand

REPOSITORY='$repository'
CONFIG='$config'

def main():
    repo = sys.argv[1]
    rev = sys.argv[2]
    cmd = SendMessageCommand('sendmsg')
    msg = dict(hash=rev)
    cmd.parse_args(['-c', REPOSITORY, CONFIG,
                    'react', 'scm.svn.refresh_commit',
                    json.dumps(msg)])
    cmd.command()

if __name__ == '__main__':
    main()
