#!/bin/bash

if [ "$TEST_MODULES"  == "" ]; then
    TEST_MODULES="\
    Allura \
    ForgeDiscussion \
    ForgeGit \
    ForgeHg \
    ForgeMail \
    ForgeSVN \
    ForgeTracker \
    ForgeWiki \
    ForgeDownloads \
    ."
fi

for module in $TEST_MODULES; do
    (
        echo "Running tests in module $module"
        cd $module
        nosetests $* || exit
    ) || exit
done

